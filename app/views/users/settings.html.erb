<div>
  <%= render 'form' %>
  <div class="col-xs-12">
    <div class="col-xs-2">
    </div>
    <hr>
    <div class="col-xs-10">
      <h2>Subscribed subreddits</h2>
    </div>
  </div>
  <div class="col-xs-12">
    <% @subscribed_subreddits.each do |subreddit| %>
      <ul class="list-group">
        <li class="row list-group-item" id=<%="settings#{subreddit.id}"%>>
          <div class="col-xs-12">
            <div class="col-xs-2">
              <%= link_to "Unsubscribe?", unsubscribe_subreddit_path(subreddit.id), remote: true, class: "btn btn-small btn-danger" %></br>
            </div>
            <div class="col-xs-10">
              <%= subreddit.name %></br></br>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>
