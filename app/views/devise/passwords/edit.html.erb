<div class="col-xs-12 fifth-of-a-page">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>
<div class="col-xs-12 fifth-of-a-page">
  <div class="col-xs-1">
  </div>
  <div class="col-xs-3">
    <b><font size="6">Tidder</font></br>
    <font color="red">INFINUM</font> STUDENT ACADEMY</br></b>
    REDDIT CLONE PROJECT
  </div>
</div>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="col-xs-12 login-form no-padding" id="login-area">
    <div class="col-xs-12 text-center">
      <h2><b>Forgot your password?</b></h2>
    </div>
    <div class="col-xs-1">
    </div>
    <div class="col-xs-3">
    </div>
    <div class="col-xs-4">
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="col-xs-12">
        NEW PASSWORD
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></br>
        <%= f.input :password, label: false, required: true, autofocus: true, autocomplete: "off", input_html: {size: 40, class: "fuzzy-borders bottom-margin"} %>
      </div>
      <div class="col-xs-12">
        CONFIRM PASSWORD
        <%= f.input :password_confirmation, label: false, required: true, autocomplete: "off", input_html: {size: 40, class: "fuzzy-borders bottom-margin"} %>
      </div>
      <div class="col-xs-12">
        <p><%= render "devise/shared/links" %></p>
      </div>
    </div>
    <div class="col-xs-4">
    </div>
  </div>
  <div class="col-xs-12 fifth-of-a-page text-center">
    <div class="col-xs-12">
      <%= f.button :submit, "Change my password", class: "btn btn-small btn-danger bottom-margin top-margin" %>
    </div>
  </div>
<% end %>
<div class="col-xs-12 fifth-of-a-page">
</div>
